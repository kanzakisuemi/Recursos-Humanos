<div class="card border-dark mb-5 mx-auto" style="background-color: white;">
  <div class="card-body">
    <%= form_with(model: colaborador) do |form| %>
      <div class="mb-3 form-floating">
        <%= form.text_field :nome, class: "form-control", placeholder: "--" %>
        <%= form.label :nome %>
        <%= errors_for(form, :nome) %>
      </div>

      <div class="mb-3 form-floating">
        <%= form.select :genero, options_for_select(Colaborador.generos.keys.map { |k, v| [k.humanize.capitalize, k]}), {:prompt => "Selecione"}, {class: "form-select"} %>
        <%= form.label :genero %>
        <%= errors_for(form, :genero) %>
      </div>

      <div class="mb-3 form-floating">
        <%= form.date_field :data_de_nascimento, class: "form-control" %>
        <%= form.label :data_de_nascimento %>
        <%= errors_for(form, :data_de_nascimento) %>
      </div>

      <div class="mb-3 form-floating">
        <%= form.select :etnia, options_for_select(Colaborador.etnia.keys.map { |k, v| [k.humanize.capitalize, k]}), {:prompt => "Selecione"}, {class: "form-select"} %>
        <%= form.label :etnia %>
        <%= errors_for(form, :etnia) %>
      </div>

      <div class="mb-3 form-floating">
        <%= form.text_field :rg, class: "form-control", placeholder: "__.___.___-_", minlength: 12, maxlength: 12, "data-controller": "rg" %>
        <%= form.label :rg %>
        <%= errors_for(form, :rg) %>
      </div>

      <div class="mb-3 form-floating">
        <%= form.text_field :cpf, class: "form-control", placeholder: "___.___.___-__", minlength: 13, maxlength: 15, "data-controller": "cpf" %>
        <%= form.label :cpf %>
        <%= errors_for(form, :cpf) %>
      </div>

      <div class="mb-3 form-floating">
        <%= form.text_field :PIS, class: "form-control", placeholder: "___._____.__-_", minlenght: 14, maxlength: 14, "data-controller": "pis" %>
        <%= form.label :PIS %>
        <%= errors_for(form, :PIS) %>
      </div>

      <div class="mb-3 form-floating">
        <%= form.select :carga_horaria, options_for_select([["8 horas", "oito"], ["6 horas", "seis"], ["4 horas", "quatro"]]), { :prompt => "Selecione" }, { class: "form-select" } %>
        <%= form.label :carga_horaria %>
        <%= errors_for(form, :carga_horaria) %>
      </div>

      <div class="d-flex">
        <div class="form-check form-switch mb-3 d-inline mx-3">
          <%= form.check_box :deficiencia, class: "form-check-input" %>
          <%= form.label "Possui deficiência", class: "form-check-label" %>
        </div>

        <div class="form-check form-switch mb-3 d-inline mx-3">
          <%= form.check_box :outra_agencia, class: "form-check-input" %>
          <%= form.label "Temporariamente em outra agência", class: "form-check-label" %>
        </div>

        <div class="form-check form-switch mb-3 d-inline mx-3">
          <%= form.check_box :afastado, class: "form-check-input" %>
          <%= form.label "Afastado", class: "form-check-label" %>
        </div>
      </div>

      <hr class="divider" />

      <div class="d-flex">
        <div class="d-inline mx-2">
          <%= form.submit "Registrar", class: "btn btn-secondary" %>
        </div>

        <%= link_to "Cancelar", colaboradores_path, class: "btn btn-secondary d-inline mx-2" %>
      </div>
    <% end %>
  </div>
</div>
